{
    "manifest_version": 3,
    "name": "TSARM",
    "version": "0.5",
    "description": "JUST TSARM",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["http://*/*"],
        "js": ["script.js"]
    }],
    "action" : {
        "default_popup" : "popup.html"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_icon": {
            "16": "images.png"
        }
    },
    "permissions": ["webRequest"]
}